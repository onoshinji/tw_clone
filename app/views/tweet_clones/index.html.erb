<h1>投稿一覧</h1>
<%= notice %>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @tweetposts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '詳細を確認する', tweet_clone_path(post.id) %></td>
    <td><%= link_to "投稿を編集する", edit_tweet_clone_path(post.id),data: { confirm: '本当に編集していいですか？' }%></td>
    <td><%= link_to '投稿を削除する', tweet_clone_path(post.id), method: :delete,data: { confirm: '本当に削除していいですか？' } %> %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しいつぶやきを投稿する', new_tweet_clone_path %>
